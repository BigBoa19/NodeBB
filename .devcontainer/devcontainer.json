{
    "name": "NodeBB",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "redis-server --daemonize yes",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.live-server",
                "redis.redis-for-vscode"
            ]
        }
    }
}
